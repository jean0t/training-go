package main

import (
	"fmt"
	"github.com/hegedustibor/htgo-tts"
	"github.com/hegedustibor/htgo-tts/voices"
)

func main() {
	speech := htgotts.Speech {Folder: "audio",
		Language: voice.Portuguese,}

	speech.Speak("Quando a terra absorve a chuva que cai e produz uma boa colheita para o lavrador, recebe a bênção de Deus.\n" +
"Mas, se a terra produz espinhos e ervas daninhas, para nada serve, sendo logo amaldiçoada e, por fim, queimada.\n" +
"Hebreus 6:7,8")
	fmt.Println("Done")
}
